@model FnR.Models.Pet

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_FnRLayout.cshtml";
}

<div id="details-content"> 

<div class="h2">
<h2>Selected Pet Details</h2></div>

<div id="backlistbtn"><a href="@Url.Action("Index")">
        <img src="~/Content/Images/backtolist-button.png" onmouseover="this.src='../../Content/Images/backtolist-button-hover.png' " onmouseout="this.src='../../Content/Images/backtolist-button.png'" /></a>
</div>

<fieldset>
    <legend>Pet</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.BreedId)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Breed.DisplayName)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Birthday)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Birthday)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.UserId)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.User.FullName)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Weight)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Weight)
    </div>


    <div id="editbtn">
    <a href="@Url.Action("Edit", new { id=Model.Id })" >
        <img src="~/Content/Images/edit-button.png" onmouseover="this.src='../../Content/Images/edit-button-hover.png' " onmouseout="this.src='../../Content/Images/edit-button.png'" /></a>
</div>
</fieldset>

</div>