@model FnR.Models.Vet

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_FnRLayout.cshtml";
}

<div id="delete-content">
    <div class="h2">
        <h2>Delete Selected Veterinarian</h2>
    </div>

    <div id="backlistbtn">
        <a href="@Url.Action("Index")" >
            <img src="~/Content/Images/backtolist-button.png" onmouseover="this.src='../../Content/Images/backtolist-button-hover.png' " onmouseout="this.src='../../Content/Images/backtolist-button.png ' " /></a>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h3>Are you sure you want to delete this?</h3>
        <fieldset>
            <legend>Vet</legend>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.Name)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Name)
            </div>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Username)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Username)
            </div>

            <div id="deletebtn">
                <input type="submit" class="btn" value="Delete" />
            </div>

        </fieldset>
    }
</div>
