@using System.Web.Optimization
@model FnR.Models.Subscription

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_FnRLayout.cshtml";
}

<h2>Update Selected Subscription</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Subscription</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.UserId, "User")
        </div>
        <div class="editor-field">
            @Html.DropDownList("UserId", "-- Select User --")
            @Html.ValidationMessageFor(model => model.UserId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PetId, "Pet")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PetId", "-- Select Pet --")
            @Html.ValidationMessageFor(model => model.PetId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProductId, "Product")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ProductId", "-- Select Product --")
            @Html.ValidationMessageFor(model => model.ProductId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VetId, "Veterinarian")
        </div>
        <div class="editor-field">
            @Html.DropDownList("VetId", "-- Select Vet --")
            @Html.ValidationMessageFor(model => model.VetId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
