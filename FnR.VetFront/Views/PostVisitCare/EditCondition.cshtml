@model FnR.Models.Condition

@{
    ViewBag.Title = "EditCondition";
    Layout = "~/Views/Shared/_VetLayout.cshtml";
}

@section styles
{
    <link href="~/Content/MyStyles/postvisitcare.css" rel="stylesheet" />
    @*<link href="~/Content/jHtmlArea/jHtmlArea.css" rel="stylesheet" />*@
}

@section scripts
{
    @*<script src="~/Scripts/jHtmlArea-0.7.5.js"></script>*@
    <script src="~/Scripts/nicEdit/nicEdit.js"></script>
    <script src="~/Scripts/MyScripts/postvisitcare.js"></script>
    <script src="~/Scripts/MyScripts/edit-condition.js"></script>
}

<div class="edit-condition">
    <h2>Condition Management</h2>

    @using (Html.BeginForm("EditCondition", "PostVisitCare", FormMethod.Post, new { id = "edit-condition-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend><span class="emphasis">@Model.Name</span></legend>

            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.VetId)
            @Html.HiddenFor(model => model.Name)

            @*@Html.TextAreaFor(model => model.Description)*@
            @*<textarea id="Description" name="Description" cols="30" rows="8"></textarea>*@
            @*@Html.HiddenFor(model => model.Description)*@
            @*<textarea id="Description" name="Description" required></textarea>*@
            @Html.TextAreaFor(model => model.Description)
            <div>
                
            </div>

            <div id="createbtn">
                <input type="image" class="btn" alt="submit" src="~/Content/Images/save-button.png" onmouseover="this.src='../Content/Images/save-button-hover.png' " onmouseout="this.src='../Content/Images/save-button.png ' " />
            </div>
        </fieldset>
    }

    <div id="backlistbtn">
        <a href="@Url.Action("Index")" >
            <img src="~/Content/Images/backtolist.png" onmouseover="this.src='../Content/Images/backtolist-button.png' " onmouseout="this.src='../Content/Images/backtolist.png ' " /></a>
    </div>
</div>
